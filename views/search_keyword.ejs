<!DOCTYPE html>
<html>

<head>
    <title>MovieWeb</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            position: relative;
            width: 100%;
        }

        .aura-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 20% 20%, rgba(255, 82, 82, 0.6), transparent 60%),
            radial-gradient(circle at 80% 20%, rgba(82, 82, 255, 0.6), transparent 60%),
            radial-gradient(circle at 50% 80%, rgba(82, 255, 200, 0.6), transparent 60%);
            filter: blur(80px);
            z-index: -1;
        }

        /* Estilo del contenedor */
        div {
            text-align: center;
            z-index: 1;
        }

        h1 {
            font-size: 36px;
            color: #333333;
            margin-bottom: 20px;
            /* Agregamos margen inferior para separar del input */
        }

        form {
            text-align: center;
        }

        input[type="text"] {
            padding: 10px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 18px;
            margin-right: 10px;
        }

        button[type="submit"],
        button {
            background-color: #ffb6c1;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        button[type="submit"]:hover,
        button:hover {
            background-color: #ffb6c1;
        }

        div {
            position: relative;
            text-align: center;
            top: 34.9%;
        }

        div#results {
            top: 0;
            background-color: white;
            cursor: pointer;
            margin-bottom: 2vh;
        }

        div#results :hover {
            background-color: lightgray;
        }

        div.keyword {
            top: 0;
            padding: 1%;
            text-align: left;
        }
    </style>
</head>

<body>
<div>
    <h1>MovieWeb</h1>
    <form action="/buscar" method="GET" id="form">
        <input type="text" name="q" placeholder="Buscar pelÃ­culas..." id="input" />
        <button type="submit">Buscar</button>
        <div id="results"></div>
    </form>
    <button onclick="window.location.href = '/'" style="margin-top: 1vh;">Inicio</button>
</div>
<script>
    const form = document.getElementById("form");
    const input = document.getElementById("input");
    const results = document.getElementById("results");
    form.addEventListener("submit", (ev) => {
        ev.preventDefault();
        window.location.href = `keyword/${input.value}`;
    });
    form.addEventListener("input", (ev) => {
        if (input.value.length == 0) {
            setTimeout(() => {
                results.replaceChildren();
            }, 30);
            return;
        }
        fetch(`/api/autocomplete?q=${input.value}`).then(response => response.ok ? response.json().then((result) => {
            results.replaceChildren();
            for (keyword of result) {
                const div = document.createElement("div");
                div.className = "keyword"
                div.textContent = keyword.keyword_name;
                results.append(div);
                div.addEventListener("click", (ev) => {
                    window.location.href = `/keyword/${div.textContent}`;
                });
            }
        }) : response.text().then(result => alert(result)));
    });
</script>
</body>

</html>