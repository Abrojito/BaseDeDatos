<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieWeb</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            position: relative;
        }

        h1 {
            font-size: 36px;
            color: #333333;
            margin-bottom: 20px;
        }

        form {
            text-align: center;
        }

        input[type="text"] {
            padding: 10px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 18px;
            margin-right: 10px;
        }

        button[type="submit"] {
            background-color: #0078d4;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        .user-header {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            position: relative;
            background-image: url("/images/xoaco.png");
            background-size: cover;
            background-position: center;
        }

        .user-name {
            font-size: 18px;
            color: #333;
            position: relative;
        }

        .tooltip {
            visibility: hidden;
            background-color: #333;
            color: #fff;
            text-align: center;
            border-radius: 5px;
            padding: 5px;
            position: absolute;
            top: 50px;
            right: 0;
            z-index: 1;
            font-size: 12px;
        }

        .user-header:hover .tooltip {
            visibility: visible;
        }

        /* Estilos para el menú desplegable */
        .dropdown {
            position: relative;
            display: inline-block;
            margin-left: 10px; /* Espaciado a la izquierda del nombre */
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            top: 20px;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        /* Mostrar el menú al hacer hover en el avatar */
        .user-header:hover .dropdown-content {
            display: block;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }
    </style>
</head>

<body>
<div class="user-header">
    <div class="user-avatar"></div>
    <div class="user-name">
        <%= user.user_name %>
    </div>
    <div class="tooltip">Change user</div>

    <!-- Menú desplegable -->
    <div class="dropdown">
        <div class="dropdown-content">
            <a href="/perfil">Perfil</a>
            <a href="/logout">Logout</a>
        </div>
    </div>
</div>

<body>
<a href="/" id="usuario"></a>
<h1>MovieWeb</h1>
<form action="/buscar" method="GET">
    <input type="text" name="q" placeholder="Buscar películas o personas..." />
    <button type="submit">Buscar</button>
</form>
<button onclick="window.location.href = '/keyword'" style="margin-top: 3vh;">Buscar por palabras clave</button>
<button onclick="window.location.href = '/watchlist'" style="margin-top: 3vh;">Lista de reproduccion</button>
<script>
    const usuario = document.getElementById("usuario");
    usuario.textContent = localStorage.getItem("userName");
</script>
</body>

</html>