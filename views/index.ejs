<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieWeb</title>
    <link rel="stylesheet" href="styles/index.css">
</head>
<body>
<!-- Aura Background -->
<div class="aura-background"></div>

<!-- User Header -->
<div class="user-header">
    <div class="user-avatar"></div>
    <div class="user-name"><%= user.user_name %></div>
    <div class="tooltip">Change user</div>
    <!-- Dropdown menu -->
    <div class="dropdown">
        <div class="dropdown-content">
            <a href="/perfil">Profile</a>
            <a href="/logout">Logout</a>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="main-content">
    <h1>MovieWeb</h1>
    <form action="/buscar" method="GET" class="search-form">
        <input type="text" name="q" placeholder="Search for movies, actors, or by keywords..." required />
        <button type="submit">Search</button>
    </form>
</div>
<!-- Playlist Button -->
<div class="playlist-button">
    <button onclick="window.location.href='/playlist'">My list</button>
</div>
</body>
</html>
